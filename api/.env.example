# ==========================================
# Voice Journal API Configuration
# ==========================================

# ==========================================
# Azure OpenAI Configuration
# ==========================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_WHISPER_DEPLOYMENT_NAME=whisper

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
POSTGRES_HOST=psql-<your-postgres-server>.postgres.database.azure.com
POSTGRES_DATABASE=voicejournal
POSTGRES_USER=pgadmin
POSTGRES_PASSWORD=<from-key-vault>

DATABASE_URL=postgresql://pgadmin:<from-key-vault>@psql-<your-postgres-server>.postgres.database.azure.com:5432/voicejournal?sslmode=require

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=<your-storage-account>
AZURE_STORAGE_ACCOUNT_KEY=<from-key-vault>
AZURE_STORAGE_CONTAINER_NAME=<your-container-name>
