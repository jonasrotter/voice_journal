# ==========================================
# Voice Journal API Configuration
# ==========================================

# AI Processing Mode: "azure_openai", "azure_speech", or "mock"
# - azure_openai: Use Azure OpenAI Whisper for transcription + GPT-4o for analysis
# - azure_speech: Use Azure Speech for transcription + Azure OpenAI GPT-4o for analysis
# - mock: Use mock data (default for development)
AI_PROCESSING_MODE=mock

# ==========================================
# Azure OpenAI Configuration
# ==========================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_WHISPER_DEPLOYMENT_NAME=whisper

# ==========================================
# Azure Speech Configuration (Alternative)
# ==========================================
# Use this for more advanced speech features
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=swedencentral

# ==========================================
# Azure Cosmos DB Configuration (Future)
# ==========================================
COSMOS_DB_ENDPOINT=https://your-cosmos.documents.azure.com:443/
COSMOS_DB_DATABASE_NAME=db-journal
COSMOS_DB_CONTAINER_NAME=journal-entries

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/voice_journal

# ==========================================
# Security
# ==========================================
SECRET_KEY=your-secret-key-change-in-production

# ==========================================
# Storage
# ==========================================
UPLOAD_DIR=./uploads
